enum UserType {
  ADMIN,
  USER
}

enum WidgetType {
  WORLD_TIME
  PORNHUB
  XVIDEO
  CRYPTOCOMPARE
  NUMBERSAPI
  ICDNB
  OPENWEATHERMAP
}

type Widget {
  id: ID! @id
  type: WidgetType!
  settings: String!
  title: String!
  order: Int!
}

type User {
  id: ID! @id
  email: String! @unique
  password: String!
  name: String!
  surname: String!
  address: String
  refreshTime: Int @default(value: 5)
  backgroundImage: String
  sidebarDisabled: Boolean
  googleToken: String
  intraToken: String
  spotifyToken: String
  timezone: String
  widgets: [Widget]
  phone: String! @unique
  type: UserType @default(value: USER)
}
